[% INCLUDE 'setup/R' %]

#load the affy library
library(affy)

[%# ROME Variables, defined by setup/R:
   con 
   rome.userdir
   rome.username  
   rome.experiment_name 

%]

[%# Arguments from Processor
    rome_datafiles_out
    rome_datafiles_in
%]

[%# Arguments from controller 
  selected_outcomes : an array reference
%]

outcomes<-c("[%selected_outcomes.join('", "')%]");


#trouble is, this isn't portable.
obj.names<-load("[% rome_datafiles_in.AB.path %]")
ab<-get(obj.names[1])

eset<-rma(ab[,outcomes]);

cwd<-setwd(rome.userdir)

filename <- "[% rome_datafiles_out.ESet.name %]"
save(eset, file=filename);

for (name in outcomes ){

    #outcomes must exist as we're not a root datafile, so find them and
    #assign them to this datafile
    rome.set.outcome(outcome.name  = name, 
                     outcome.experiment.name = rome.experiment_name,
                     outcome.experiment.owner = rome.username,
                     datafile.name = "[%rome_datafiles_out.ESet.name%]", 
                     datafile.experiment.name = "[%rome_datafiles_out.ESet.experiment_name%]",
		     datafile.experiment.owner = "[%rome_datafiles_out.ESet.experiment_owner%]")
		     
}

#change back to where you were 
setwd(cwd);






