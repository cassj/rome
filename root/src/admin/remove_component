<form action="[%Catalyst.uri_for('/admin/component/uninstall')%]"
      method="post" 
      onsubmit=" new Ajax.Updater( 'remove_component_results',  
                                   '[%Catalyst.uri_for('/admin/component/uninstall')%]', 
                                   { parameters: Form.serialize(this), 
                                     asynchronous: 1,
				     onComplete: function(){update_admin_selected_component('selected_component');
				       update_admin_remove_component('remove_component');}
				   } ) ; 	
                return false"
>



