<!-- status and error messages -->
<div id="rome_messages[%msg_num%]">
  <span class="message">[% status_msg or Catalyst.flash.status_msg %]</span>
  <span class="error">[% error_msg or Catalyst.flash.error_msg%]</span>
  <!-- Form parameter validation errors -->
  <div id="dfv_error">
    [% FOREACH thing IN Catalyst.form.msgs %]
      <div class="name">[% thing.key %]:</div> <div>[% thing.value %]</div>
    [% END %]
    <p/>
  </div>
</div>


